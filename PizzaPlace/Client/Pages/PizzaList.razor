@if (Items is null || !Items.Any())
{
    <div>Loading...</div>
}
else
{
    <ItemList Items="@Items">
        <Header>
            <h1>@Title</h1>
        </Header>
        <RowTemplate Context="pizza">
            <PizzaItem Pizza="@pizza"
                   ButtonClass=@ButtonClass
                   ButtonTitle=@ButtonTitle
                   Selected=@Selected />
        </RowTemplate>
    </ItemList>

    @*<h1>@Title</h1>

        @foreach (var pizza in Items)
        {
        <PizzaItem Pizza="@pizza" ButtonClass="@ButtonClass" ButtonTitle="@ButtonTitle" Selected="@Selected"></PizzaItem>
        }*@
}
